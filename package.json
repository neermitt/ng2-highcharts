{
  "name": "ng2-highcharts",
  "version": "0.0.1",
  "description": "angular2 highcharts directives",
  "scripts": {
    "build": "node node_modules/typescript/bin/tsc",
    "test": "karma start karma.conf.js",
    "demo:watch": "webpack --progress --colors --watch",
    "demo:dist": "webpack --progress --colors --dist",
    "postinstall": "typings install",
    "publish": "npm run build && npm run demo:dist",
    "serve": "webpack-dev-server --progress --colors"
  },
  "files": [
    "dist",
    "index.js",
    "index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neermitt/ng2-highcharts.git"
  },
  "keywords": [
    "angular2",
    "ng2",
    "highcharts"
  ],
  "author": "Neeraj Mittal <mittal.neeraj@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/neermitt/ng2-highcharts/issues"
  },
  "homepage": "https://github.com/neermitt/ng2-highcharts#readme",
  "dependencies": {
    "angular2": "^2.0.0-beta.6",
    "highcharts": "^4.2.1",
    "jquery": "^2.2.0",
    "systemjs": "^0.19.9"
  },
  "devDependencies": {
    "angular2": "^2.0.0-beta.7",
    "bulma": "^0.0.14",
    "es6-promise": "^3.0.2",
    "es6-shim": "^0.33.3",
    "highlight.js": "^9.1.0",
    "html-loader": "^0.4.3",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.15",
    "karma-chrome-launcher": "^0.2.2",
    "karma-jasmine": "^0.3.6",
    "karma-webpack": "^1.7.0",
    "reflect-metadata": "0.1.2",
    "retyped-highcharts-tsd-ambient": "^4.1.9-0",
    "rxjs": "5.0.0-beta.2",
    "ts-loader": "^0.7.2",
    "typescript": "^1.7.3",
    "webpack": "^1.12.9",
    "webpack-dev-server": "^1.14.1",
    "zone.js": "0.5.15"
  }
}
